<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <TextView
                android:id="@+id/weather_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mostly Cloud"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textAlignment="center"
                android:layout_marginTop="32dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />
            <ImageView
                android:id="@+id/weather_image"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/weather_type"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/cloudy_sunny"/>
            <TextView
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MON June 17 | 10:00AM"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textSize="19sp"

                app:layout_constraintTop_toBottomOf="@id/weather_image"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp"
               />
            <TextView
                android:id="@+id/weather_degree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="25Â°"

                app:layout_constraintTop_toBottomOf="@id/date"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textSize="63dp"
                android:textStyle="bold"

                android:layout_marginTop="8dp"
               />
            <TextView
                android:id="@+id/highest_lowest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="H:27 L:18"

                app:layout_constraintTop_toBottomOf="@id/weather_degree"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                />
            <androidx.cardview.widget.CardView
                android:id="@+id/card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="8dp"
                app:cardBackgroundColor="#331866"
                app:cardCornerRadius="8dp"

                app:cardUseCompatPadding="true"
                app:layout_constraintTop_toBottomOf="@id/highest_lowest"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="16dp">

                    <ImageView
                        android:id="@+id/rain_image"
                        android:layout_width="50dp"
                        android:layout_height="50dp"

                        android:layout_marginEnd="35dp"
                        android:src="@drawable/rain"
                        app:layout_constraintEnd_toStartOf="@+id/wind_image"
                        app:layout_constraintStart_toEndOf="@id/wind_image"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/rain_percentage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="@+id/rain_image"
                        app:layout_constraintStart_toStartOf="@+id/rain_image"
                        app:layout_constraintTop_toBottomOf="@id/rain_image"
                        android:text="22%" />

                    <TextView

                        android:id="@+id/rain_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        app:layout_constraintEnd_toEndOf="@+id/rain_image"
                        app:layout_constraintStart_toStartOf="@+id/rain_image"
                        app:layout_constraintTop_toBottomOf="@id/rain_percentage"
                        android:text="Rain" />

                    <ImageView

                        android:id="@+id/wind_image"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:src="@drawable/wind" />

                    <TextView

                        android:id="@+id/wind_percentage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="@+id/wind_image"
                        app:layout_constraintStart_toStartOf="@+id/wind_image"
                        app:layout_constraintTop_toBottomOf="@+id/wind_image"
                        android:text="12 KM/h" />

                    <TextView

                        android:id="@+id/wind_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        app:layout_constraintEnd_toEndOf="@+id/wind_image"
                        app:layout_constraintStart_toStartOf="@+id/wind_image"
                        app:layout_constraintTop_toBottomOf="@+id/wind_percentage"
                        android:text="Wind Speed" />

                    <ImageView
                        android:id="@+id/humidity_image"
                        android:layout_width="50dp"
                        android:layout_height="50dp"

                        android:layout_marginStart="35dp"
                        android:src="@drawable/humidity"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/wind_image"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/humidity_percentage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="@+id/humidity_image"
                        app:layout_constraintStart_toStartOf="@+id/humidity_image"
                        app:layout_constraintTop_toBottomOf="@+id/humidity_image"
                        android:text="18%" />

                    <TextView

                        android:id="@+id/humidity_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:textColor="@color/white"
                        app:layout_constraintTop_toBottomOf="@id/humidity_percentage"

                        app:layout_constraintEnd_toEndOf="@+id/humidity_image"
                        app:layout_constraintStart_toStartOf="@+id/humidity_image"
                        android:text="Humidity" />


                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <TextView

                android:id="@+id/today"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:textColor="#DCA900"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/card"
                android:text="Today" />

            <TextView
                android:id="@+id/next_7_days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/today"
                android:text="Next 7 Day >" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
app:layout_constraintTop_toTopOf="@id/today"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent" />



        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>