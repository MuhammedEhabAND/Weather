<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/night_background"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".notification.view.NotificationFragment">


    <RadioGroup
        android:id="@+id/alert_alarm_radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/drawable_radio_group_tab_background"
        android:orientation="horizontal"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.32"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/alert_radio"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:background="@drawable/drawable_tab_selector"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:text="@string/alert_text"
            android:textColor="@drawable/drawable_tab_text_color_selector"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />

        <RadioButton
            android:id="@+id/alarm_radio"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:background="@drawable/drawable_tab_selector"
            android:button="@null"
            android:checked="false"
            android:gravity="center"
            android:text="@string/alarm_text"
            android:textColor="@drawable/drawable_tab_text_color_selector"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:ignore="TouchTargetSizeCheck" />


    </RadioGroup>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/startBtn"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/secondary_button"
        android:text="@string/start_btn"

        android:textColor="@color/endPurple"
        app:layout_constraintEnd_toStartOf="@+id/endBtn"
        app:layout_constraintStart_toStartOf="@+id/alert_alarm_radio_group"
        app:layout_constraintTop_toBottomOf="@+id/alert_alarm_radio_group" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/endBtn"

        android:textColor="@color/endPurple"
        android:background="@drawable/secondary_button"
        android:layout_width="0dp"
        android:layout_marginHorizontal="25dp"
        android:layout_height="40dp"
        android:text="@string/end_btn"


        app:layout_constraintBottom_toBottomOf="@+id/startBtn"
        app:layout_constraintEnd_toEndOf="@+id/alert_alarm_radio_group"
        app:layout_constraintStart_toEndOf="@+id/startBtn"
        app:layout_constraintTop_toTopOf="@+id/startBtn" />

<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/fav_layout"
    app:layout_constraintTop_toBottomOf="@id/startBtn"
    android:layout_marginTop="25dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_width="match_parent"
    android:layout_height="0dp">

    <TextView
        android:id="@+id/select_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="@string/select_title"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:textStyle="bold"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/data_rv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/data_rv"
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/select_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/fav_item_layout"/>


</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>